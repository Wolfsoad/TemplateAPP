@model IEnumerable<STRACT.Entities.Certifications.Certificate>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidUntil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertificateUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertificationLine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @item.EmissionDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.ValidUntil.ToString("dd/MM/yyyy")
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.CertificateUrl)">Open</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertificationLine.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CertificateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CertificateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CertificateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
