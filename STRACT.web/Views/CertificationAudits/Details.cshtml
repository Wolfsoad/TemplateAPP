@model STRACT.Entities.Certifications.Audit

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Audit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfAudit)
        </dt>
        <dd class = "col-sm-10">
            @Model.DateOfAudit.ToString("dd/MM/yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Concluded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Concluded)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Model.User.ApplicationUser.UserName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CertificationLine)
        </dt>
        <dd class = "col-sm-10">
            @Model.CertificationLine.Description <span>(</span>@Model.CertificationLine.Entity.Name<span>)</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Model.Location.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AuditId" asp-route-selectedCertificationLineId="@ViewBag.SelectedCertificationLineId">Edit</a> |
    <a asp-action="Index" asp-route-selectedCertificationLineId="@ViewBag.SelectedCertificationLineId">Back to List</a>
</div>
