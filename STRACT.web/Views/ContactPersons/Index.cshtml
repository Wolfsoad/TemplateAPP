@model IEnumerable<STRACT.Entities.Certifications.ContactPerson>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMainContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMainContact)
            </td>
            <td>
                @item.Entity.Name <span> (</span>  @item.Entity.SupplierCode <span>)</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContactPersonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContactPersonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContactPersonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
