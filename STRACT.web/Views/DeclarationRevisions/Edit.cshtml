@model STRACT.Entities.Declaration.DeclarationRevision

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeclarationRevision</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeclarationRevisionId" />
            <div class="form-group">
                <label asp-for="RevisionDescription" class="control-label"></label>
                <input asp-for="RevisionDescription" class="form-control" />
                <span asp-validation-for="RevisionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RevisionDate" class="control-label"></label>
                <input asp-for="RevisionDate" type="date" class="form-control" />
                <span asp-validation-for="RevisionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserInTeamId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeclarationItemId" class="control-label"></label>
                <select asp-for="DeclarationItemId" class="form-control" asp-items="ViewBag.DeclarationItemId"></select>
                <span asp-validation-for="DeclarationItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  asp-route-selectedDeclarationId="@ViewBag.SelectedDeclaration">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
