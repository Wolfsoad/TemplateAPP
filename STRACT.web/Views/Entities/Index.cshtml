@model IEnumerable<STRACT.Entities.Certifications.Entity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierCode)
            </th>
            <th>
                Main Contact
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierCode)
            </td>
            <td>
                @{
                    if(item.MainContact != null)
                    {
                        <div class="row">@item.MainContact.Name</div>
                        <div class="row"><small>@item.MainContact.PhoneNumber</small></div>
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EntityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EntityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EntityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
