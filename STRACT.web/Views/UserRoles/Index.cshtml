@using STRACT.web.Models
@using STRACT.web.Resources

@inject LocalizationService _loc
@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@_loc.GetLocalizedHtmlString("User Roles")</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@_loc.GetLocalizedHtmlString("First Name")</th>
            <th>@_loc.GetLocalizedHtmlString("Last Name")</th>
            <th>@_loc.GetLocalizedHtmlString("Email")</th>
            <th>@_loc.GetLocalizedHtmlString("Roles")</th>
            <th>@_loc.GetLocalizedHtmlString("Action")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">@_loc.GetLocalizedHtmlString("Manage Roles")</a>
                </td>
            </tr>
        }
    </tbody>
</table>